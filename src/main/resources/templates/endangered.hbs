{{#partial "content"}}
    <section>
        {{#if animals}}
            <h4>Here are the endangered animals that have been identified to exist in the </h4>
            {{#each animals}}
                <p>{{id}}. {{animalName}}</p> Click <a href="/animals/{{id}}">here</a> for more details.
            {{/each}}
        {{else}}
            <h4>Hi, Have you identified an endangered animal list it <a href="/animals/endangered/new">here.</a> </h4>
        {{/if}}

    </section>
{{/partial}}

